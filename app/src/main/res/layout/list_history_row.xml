<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:id="@+id/row_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="duration:" />
    <TextView
        android:id="@+id/row_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_duration_label"
        android:layout_alignParentStart="true"
        android:text="12" />

    <TextView
        android:id="@+id/row_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/row_duration_label"
        android:layout_marginStart="50dp"
        android:text="count:" />

    <TextView
        android:id="@+id/row_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/row_duration_label"
        android:layout_below="@id/row_count_label"
        android:layout_marginStart="50dp"
        android:text="22222222" />

    <TextView
        android:id="@+id/row_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/row_count_label"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="70dp"

        android:text="date:" />

    <TextView
        android:id="@+id/row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_date_label"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="70dp"

        android:layout_toRightOf="@id/row_count_label"
        android:text="55" />
</RelativeLayout>